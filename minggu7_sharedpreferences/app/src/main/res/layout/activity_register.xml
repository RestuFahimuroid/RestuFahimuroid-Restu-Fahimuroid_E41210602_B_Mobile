<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".registerActivity">

    <TextView
        android:id="@+id/HalSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Halaman SignUp"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/et_emailSignUp"
        android:layout_below="@+id/HalSignup"
        android:layout_width="match_parent"
        android:hint="Username"
        android:layout_marginTop="70dp"
        android:layout_height="50dp"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_passwordSignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_emailSignUp"
        android:layout_marginTop="40dp"
        android:hint="Password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_passwordSignUp2"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/et_passwordSignUp"
        android:layout_marginTop="40dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:imeActionLabel="Sign Up"
        android:imeOptions="actionDone"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signupSignUp"
        android:layout_below="@id/et_passwordSignUp2"
        android:layout_marginTop="100dp"
        android:text="SignUp"/>

</RelativeLayout>